<%= form_with(model: @whisper, local: true, url: new_or_edit) do |form| %>
    <% if @whisper.errors.any?%>
        <div id = "error_explanation">
            <ul>
            <% @whisper.errors.full_messages.each do |msg|%>
                <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
    <% end %>
    <div class = "whisper_content">
    <%= form.text_field :content%>
    </div>
    <%= form.submit "whisper"%>
<% end %>
<br>
<%=link_to(whispers_path) do %>
    <button class="btn btn-secondary btn-lg" >back</button>
 <%end%>